<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@drawable/fondotela"
    android:screenOrientation="landscape"
    tools:context=".PredictionResultActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/cuerda" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="225dp"
        android:layout_height="5000dp"
        android:layout_above="@+id/control"
        android:layout_marginStart="165dp"
        android:layout_marginTop="0dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/marco"
        android:layout_width="480dp"
        android:layout_height="195dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="96dp"
        android:visibility="gone"
        app:srcCompat="@drawable/marcofoto" />


    <ImageView
        android:id="@+id/carton2"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="0dp"
        android:adjustViewBounds="false"
        android:baselineAligned="false"
        android:contentDescription="@string/todo"
        android:cropToPadding="false"
        android:orientation="horizontal"
        android:rotation="15"
        android:visibility="visible"
        app:srcCompat="@mipmap/carton2"
        tools:src="@mipmap/carton2" />

    <ImageButton
        android:id="@+id/buttonSeguir"
        style="@android:style/Widget.ImageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="60dp"
        android:adjustViewBounds="false"
        android:background="@drawable/roundcorner"
        android:cropToPadding="false"
        android:rotation="15"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/boton" />


    <ImageView
        android:id="@+id/tira1"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="34dp"
        android:alpha=".95"
        android:rotation="16"
        app:srcCompat="@drawable/adhesiva" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="271dp"
        android:layout_marginEnd="48dp"
        android:fontFamily="@font/f3dumb"
        android:rotation="15"
        android:text="@string/seguir"
        android:textColor="@color/colorDarkBlue"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/muelle"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_marginStart="380dp"
        android:layout_marginTop="210dp"
        android:visibility="gone"
        app:srcCompat="@drawable/muelle" />

    <ImageView
        android:id="@+id/bombilla"
        android:layout_width="160dp"
        android:layout_height="170dp"
        android:layout_marginStart="393dp"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        app:srcCompat="@drawable/bombilla" />

    <ImageView
        android:id="@+id/cartelMuyBien"
        android:layout_width="160dp"
        android:layout_height="170dp"
        android:layout_marginStart="395dp"
        android:layout_marginTop="90dp"
        android:visibility="gone"
        app:srcCompat="@drawable/cartelmuybien" />


    <FrameLayout
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@color/control_background"
        android:screenOrientation="landscape"
        android:visibility="gone">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="80dp"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:visibility="gone" />


    </FrameLayout>

    <ImageView
        android:id="@+id/libro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:srcCompat="@drawable/libroabierto" />


    <ImageButton
        android:id="@+id/tryagain"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/nada"
        android:rotation="1"
        android:visibility="visible" />

</RelativeLayout>
