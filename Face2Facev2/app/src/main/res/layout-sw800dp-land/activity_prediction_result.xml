<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@drawable/fondotela"
    android:screenOrientation="landscape"
    tools:context=".PredictionResultActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/cuerda" />

    <ImageView
        android:id="@+id/marco"
        android:layout_width="420dp"
        android:layout_height="350dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        android:layout_marginStart="27dp"
        android:layout_marginTop="225dp"
        android:rotation="90"
        android:visibility="gone"
        app:srcCompat="@drawable/marcofoto" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="405dp"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="@id/marco"
        app:layout_constraintTop_toTopOf="parent"
        android:rotation="-90"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/cartonSeguir"
        android:layout_width="235dp"
        android:layout_height="200dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="490dp"
        android:adjustViewBounds="false"
        android:baselineAligned="false"
        android:contentDescription="@string/todo"
        android:cropToPadding="false"
        android:orientation="horizontal"
        android:rotation="15"
        android:visibility="visible"
        app:srcCompat="@mipmap/carton2"
        tools:src="@mipmap/carton2" />

    <ImageButton
        android:id="@+id/buttonSeguir"
        style="@android:style/Widget.ImageButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="515dp"
        android:layout_marginEnd="60dp"
        android:adjustViewBounds="false"
        android:background="@drawable/roundcorner"
        android:cropToPadding="false"
        android:rotation="15"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/boton" />


    <ImageView
        android:id="@+id/tiraSeguir"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="580dp"
        android:layout_marginEnd="30dp"
        android:alpha=".95"
        android:rotation="16"
        app:srcCompat="@drawable/adhesiva" />

    <TextView
        android:id="@+id/textoSeguir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="590dp"
        android:layout_marginEnd="55dp"
        android:fontFamily="@font/f3dumb"
        android:rotation="15"
        android:text="@string/seguir"
        android:textColor="@color/colorDarkBlue"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/muelle"
        android:layout_width="270dp"
        android:layout_height="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="680dp"
        android:layout_marginTop="380dp"
        android:visibility="gone"
        app:srcCompat="@drawable/muelle" />

    <ImageView
        android:id="@+id/bombilla"
        android:layout_width="260dp"
        android:layout_height="230dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="680dp"
        android:layout_marginTop="80dp"
        android:visibility="gone"
        app:srcCompat="@drawable/bombilla" />

    <ImageView
        android:id="@+id/cartelMuyBien"
        android:layout_width="280dp"
        android:layout_height="260dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="685dp"
        android:layout_marginTop="185dp"
        android:visibility="gone"
        app:srcCompat="@drawable/cartelmuybien" />


    <ImageView
        android:id="@+id/libro"
        android:layout_width="1000dp"
        android:layout_height="700dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        app:srcCompat="@mipmap/libro_historia_maria2" />


    <ImageButton
        android:id="@+id/tryagain"
        android:layout_width="280dp"
        android:layout_height="90dp"
        app:layout_constraintLeft_toLeftOf="@+id/libro"
        app:layout_constraintRight_toRightOf="@+id/libro"
        app:layout_constraintTop_toTopOf="@id/libro"
        app:layout_constraintBottom_toBottomOf="@id/libro"
        app:layout_constraintVertical_bias="0.71"
        app:layout_constraintHorizontal_bias="0.19"
        android:background="@drawable/adhesiva"
        android:rotation="1"
        android:alpha="1"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tryagainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/tryagain"
        app:layout_constraintRight_toRightOf="@+id/tryagain"
        app:layout_constraintTop_toTopOf="@id/tryagain"
        app:layout_constraintBottom_toBottomOf="@id/tryagain"
        android:fontFamily="@font/learningcurve"
        android:textSize="40sp"
        android:text="@string/tryagain"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
