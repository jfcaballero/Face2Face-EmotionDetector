<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondotela"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/image"
        android:layout_width="965dp"
        android:layout_height="548dp"
        android:layout_alignTop="@+id/reconocimient"
        android:layout_marginEnd="28dp"
        android:adjustViewBounds="false"
        android:baselineAligned="false"
        android:contentDescription="@string/todo"
        android:cropToPadding="false"
        android:orientation="horizontal"
        android:rotation="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/carton2"
        tools:src="@mipmap/carton2" />

    <ImageButton
        android:id="@+id/historiaAlegri"
        style="@android:style/Widget.ImageButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="144dp"
        android:adjustViewBounds="false"
        android:background="@drawable/roundcorner"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/boton" />

    <ImageButton
        android:id="@+id/historiaSorpres"
        style="@android:style/Widget.ImageButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="238dp"
        android:adjustViewBounds="false"
        android:background="@drawable/roundcorner"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/boton" />

    <ImageButton
        android:id="@+id/reconocimient"
        style="@android:style/Widget.ImageButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="416dp"
        android:adjustViewBounds="false"
        android:background="@drawable/roundcorner"
        android:clickable="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/boton" />

    <ImageButton
        android:id="@+id/reconocimiento"
        style="@android:style/Widget.ImageButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="470dp"
        android:layout_marginTop="416dp"
        android:adjustViewBounds="false"
        android:background="@drawable/roundcorner"
        android:clickable="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/boton" />

    <ImageButton
        android:id="@+id/sonido"
        style="@android:style/Widget.ImageButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="48dp"
        android:adjustViewBounds="false"
        android:background="@drawable/roundcorner"
        android:clickable="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vol_up" />

    <ImageButton
        android:id="@+id/salir"
        style="@android:style/Widget.ImageButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="835dp"
        android:layout_marginTop="270dp"
        android:adjustViewBounds="false"
        android:background="@drawable/roundcorner"
        android:clickable="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/boton_salir" />

    <ImageView
        android:id="@+id/tira1"
        android:layout_width="655dp"
        android:layout_height="180dp"
        android:layout_marginLeft="150dp"
        android:alpha=".95"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/adhesiva" />

    <ImageView
        android:id="@+id/tira2"
        android:layout_width="700dp"
        android:layout_height="720dp"
        android:alpha=".95"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/adhesiva" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/f3dumb"
        android:text="APRENDIZAJE"
        android:textColor="@color/colorBlack"
        android:textSize="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="185dp"
        android:layout_marginTop="325dp"
        android:fontFamily="@font/f3dumb"
        android:text="PRÁCTICA INTERACTIVA"
        android:textColor="@color/colorBlack"
        android:textSize="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="145dp"
        android:fontFamily="@font/f3dumb"
        android:text="HISTORIA ALEGRÍA"
        android:textColor="@color/colorDarkBlue"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="240dp"
        android:fontFamily="@font/f3dumb"
        android:text="HISTORIA SORPRESA"
        android:textColor="@color/colorDarkBlue"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="420dp"
        android:fontFamily="@font/f3dumb"
        android:text="ALEGRÍA"
        android:textColor="@color/colorDarkBlue"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="555dp"
        android:layout_marginTop="420dp"
        android:fontFamily="@font/f3dumb"
        android:text="SORPRESA"
        android:textColor="@color/colorDarkBlue"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonCreditos"
        style="@android:style/Widget.ImageButton"
        android:layout_width="110dp"
        android:layout_height="220dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/roundcorner"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/botoncreditos" />

    <ImageView
        android:id="@+id/creditos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/creditosmaspequenoconlogos2" />


</android.support.constraint.ConstraintLayout>