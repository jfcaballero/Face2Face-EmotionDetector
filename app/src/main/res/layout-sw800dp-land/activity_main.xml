<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondotela"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/carton"
        android:layout_width="1267dp"
        android:layout_height="730dp"
        android:layout_alignTop="@+id/practicaAlegria"
        android:adjustViewBounds="false"
        android:baselineAligned="false"
        android:contentDescription="@string/todo"
        android:cropToPadding="false"
        android:orientation="horizontal"
        android:rotation="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@mipmap/carton2"
        tools:src="@mipmap/carton2" />


    <ImageButton
        android:id="@+id/historiaAlegria"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="false"
        android:background="@drawable/roundcorner"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="@id/carton"
        app:layout_constraintTop_toTopOf="@id/carton"
        app:layout_constraintBottom_toBottomOf="@id/carton"
        app:layout_constraintRight_toRightOf="@id/carton"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintVertical_bias="0.275"
        app:srcCompat="@drawable/boton" />

    <ImageButton
        android:id="@+id/historiaSorpresa"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="false"
        android:background="@drawable/roundcorner"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="@id/carton"
        app:layout_constraintTop_toTopOf="@id/carton"
        app:layout_constraintBottom_toBottomOf="@id/carton"
        app:layout_constraintRight_toRightOf="@id/carton"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintVertical_bias="0.465"
        app:srcCompat="@drawable/boton" />

    <ImageButton
        android:id="@+id/practicaAlegria"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:adjustViewBounds="false"
        android:background="@drawable/roundcorner"
        android:clickable="true"
        android:focusable="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="@id/carton"
        app:layout_constraintTop_toTopOf="@id/carton"
        app:layout_constraintBottom_toBottomOf="@id/carton"
        app:layout_constraintRight_toRightOf="@id/carton"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintVertical_bias="0.86"
        app:srcCompat="@drawable/boton" />

    <ImageButton
        android:id="@+id/practicaSorpresa"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:adjustViewBounds="false"
        android:background="@drawable/roundcorner"
        android:clickable="true"
        android:focusable="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="@id/carton"
        app:layout_constraintTop_toTopOf="@id/carton"
        app:layout_constraintBottom_toBottomOf="@id/carton"
        app:layout_constraintRight_toRightOf="@id/carton"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintVertical_bias="0.86"
        app:srcCompat="@drawable/boton" />

    <ImageButton
        android:id="@+id/sonido"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="48dp"
        android:adjustViewBounds="false"
        android:background="@drawable/roundcorner"
        android:clickable="true"
        android:focusable="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vol_up" />

    <ImageButton
        android:id="@+id/config"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="178dp"
        android:adjustViewBounds="false"
        android:background="@drawable/roundcorner"
        android:clickable="true"
        android:focusable="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/configuracion" />

    <ImageButton
        android:id="@+id/help"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="318dp"
        android:adjustViewBounds="false"
        android:background="@drawable/roundcorner"
        android:clickable="true"
        android:focusable="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/question_mark" />

    <ImageView
        android:id="@+id/tira1"
        android:layout_width="861dp"
        android:layout_height="210dp"
        android:alpha=".95"
        app:layout_constraintLeft_toLeftOf="@id/carton"
        app:layout_constraintRight_toRightOf="@id/carton"
        app:layout_constraintTop_toTopOf="@id/carton"
        app:layout_constraintBottom_toBottomOf="@id/carton"
        app:layout_constraintVertical_bias="0.02"
        app:srcCompat="@drawable/adhesiva" />

    <ImageView
        android:id="@+id/tira2"
        android:layout_width="920dp"
        android:layout_height="210dp"
        android:alpha=".95"
        app:layout_constraintLeft_toLeftOf="@id/carton"
        app:layout_constraintRight_toRightOf="@id/carton"
        app:layout_constraintTop_toTopOf="@id/carton"
        app:layout_constraintBottom_toBottomOf="@id/carton"
        app:layout_constraintVertical_bias="0.68"
        app:srcCompat="@drawable/adhesiva" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/f3dumb"
        android:text="@string/aprendizaje"
        android:textColor="@color/colorBlack"
        android:textSize="60sp"
        app:layout_constraintLeft_toLeftOf="@id/tira1"
        app:layout_constraintRight_toRightOf="@id/tira1"
        app:layout_constraintTop_toTopOf="@id/tira1"
        app:layout_constraintBottom_toBottomOf="@id/tira1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/f3dumb"
        android:text="@string/practica_interactiva"
        android:textColor="@color/colorBlack"
        android:textSize="60sp"
        app:layout_constraintLeft_toLeftOf="@id/tira2"
        app:layout_constraintRight_toRightOf="@id/tira2"
        app:layout_constraintTop_toTopOf="@id/tira2"
        app:layout_constraintBottom_toBottomOf="@id/tira2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/f3dumb"
        android:text="@string/historia_alegria"
        android:textColor="@color/colorDarkBlue"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="@id/carton"
        app:layout_constraintTop_toTopOf="@id/carton"
        app:layout_constraintBottom_toBottomOf="@id/carton"
        app:layout_constraintRight_toRightOf="@id/carton"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintVertical_bias="0.28" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/f3dumb"
        android:text="@string/historia_sorpresa"
        android:textColor="@color/colorDarkBlue"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="@id/carton"
        app:layout_constraintTop_toTopOf="@id/carton"
        app:layout_constraintBottom_toBottomOf="@id/carton"
        app:layout_constraintRight_toRightOf="@id/carton"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintVertical_bias="0.46" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/f3dumb"
        android:text="@string/alegria"
        android:textColor="@color/colorDarkBlue"
        android:textSize="45sp"
        app:layout_constraintLeft_toLeftOf="@id/carton"
        app:layout_constraintTop_toTopOf="@id/carton"
        app:layout_constraintBottom_toBottomOf="@id/carton"
        app:layout_constraintRight_toRightOf="@id/carton"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintVertical_bias="0.84" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/f3dumb"
        android:text="@string/sorpresa"
        android:textColor="@color/colorDarkBlue"
        android:textSize="45sp"
        app:layout_constraintLeft_toLeftOf="@id/carton"
        app:layout_constraintTop_toTopOf="@id/carton"
        app:layout_constraintBottom_toBottomOf="@id/carton"
        app:layout_constraintRight_toRightOf="@id/carton"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintVertical_bias="0.84" />

    <ImageButton
        android:id="@+id/buttonCreditos"
        style="@android:style/Widget.ImageButton"
        android:layout_width="145dp"
        android:layout_height="270dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/roundcorner"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/botoncreditos" />

    <ImageButton
        android:id="@+id/buttonSalir"
        style="@android:style/Widget.ImageButton"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/roundcorner"
        android:layout_marginTop="290dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/boton_salir" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone">
        <ImageView
            android:id="@+id/creditos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/creditos_nuevos" />
    </ScrollView>

    <ImageButton
        android:id="@+id/closeCreditos"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="false"
        android:background="@drawable/roundcorner"
        android:clickable="true"
        android:focusable="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="@id/scroll"
        app:layout_constraintTop_toTopOf="@id/scroll"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:rotation="45"
        android:visibility="gone"
        app:srcCompat="@drawable/plus" />

</androidx.constraintlayout.widget.ConstraintLayout>